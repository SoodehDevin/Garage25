@model IEnumerable<Garage25.Models.Vehicle>

@{
    ViewBag.Title = "Index";
}

<h2>Garage</h2>

<p>
    @Html.ActionLink("Park Vehicle", "Create")
</p>

<form>
    <input type="text" name="reg" />
    <input type="submit" value="Search" />
    <br/>
 
</form>


<table class="table sortable table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.VType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RegNr)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Brand)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CheckInTime)
            </th>
            <th data-defaultsort='disabled'></th>
        </tr>
    </thead>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.VType)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RegNr)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Brand)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CheckInTime)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CheckOutTime)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Check-out", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
