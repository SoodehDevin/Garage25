@model IEnumerable<Garage25.Models.Vehicle>

@{
    ViewBag.Title = "Index";
}

<h2>Garage</h2>

<p>
    @Html.ActionLink("Park Vehicle", "Park")
</p>
<p>Enter a registration number</p>
<form>
    <input type="text" name="reg" />
    <input type="submit" value="Search" />
    <br/>
 
</form>


<table class="table sortable table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Member.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VehicleType.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RegNr)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Make)
            </th>
            @*<th>
                @Html.DisplayNameFor(model => model.ParkingDuration)
            </th>*@
            <th data-defaultsort='disabled'></th>
        </tr>
    </thead>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Member.Id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.VehicleType.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RegNr)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Make)
        </td>
        @*<td>
            @Html.DisplayFor(modelItem => item.ParkingDuration)
        </td>*@
        @*<td>
            @Html.DisplayFor(modelItem => item.CheckOutTime)
        </td>*@
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Check-out", "CheckOut", new { id=item.Id })
        </td>
    </tr>
}

</table>
